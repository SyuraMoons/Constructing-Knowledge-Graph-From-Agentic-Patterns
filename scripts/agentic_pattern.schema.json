{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agentic Pattern Schema",
  "description": "Schema for normalized agentic AI patterns",
  "type": "object",
  "required": ["id", "framework", "agents"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique pattern identifier"
    },
    "framework": {
      "type": "string",
      "enum": ["crewai", "langraph", "autogen", "mastraai"],
      "description": "Source framework"
    },
    "source_file": {
      "type": "string",
      "description": "Original source file path"
    },
    "title": {
      "type": "string",
      "description": "Pattern title"
    },
    "description": {
      "type": "string",
      "description": "Pattern description"
    },
    "agents": {
      "type": "array",
      "description": "List of agents",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "role": {"type": "string"},
          "description": {"type": "string"},
          "goal": {"type": "string"},
          "tools": {"type": "array"},
          "language_model": {"type": ["string", "null"]},
          "memory": {"type": "boolean"}
        }
      }
    },
    "tasks": {
      "type": "array",
      "description": "List of tasks",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "expected_output": {"type": "string"}
        }
      }
    },
    "tools": {
      "type": "array",
      "description": "List of tools",
      "items": {
        "type": "object"},
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "type": {"type": "string"}
        }
      }
    },
    "workflow_pattern": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Sequential", "Parallel", "Nested"]
        },
        "steps": {"type": "array"}
      }
    },
    "provenance": {
      "type": "object",
      "properties": {
        "extracted_from": {"type": "string"},
        "extraction_date": {"type": "string"},
        "extractor_version": {"type": "string"}
      }
    }
  }
}
